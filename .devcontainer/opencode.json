{
  "$schema": "https://opencode.ai/config.json",
  "model": "opencode/kimi-k2.5-free",
  "small_model": "opencode/kimi-k2.5-free",
  "provider": {
    "opencode": {
      "options": {
        "apiKey": "{env:OPENCODE_API_KEY}"
      }
    }
  },
  "theme": "opencode",
  "autoupdate": true,
  "share": "manual",
  "permission": {
    "input": "ask",
    "edit": "ask",
    "bash": "ask"
  },
  "compaction": {
    "auto": true,
    "prune": true
  },
  "watcher": {
    "ignore": [
      "node_modules/**",
      "dist/**",
      ".git/**"
    ]
  },
  "instructions": [],
  "disabled_providers": [],
  "experimental": {}
}
